<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/rankNumber"
        android:layout_width="20dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:padding="2dp"
        android:text="Rk"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/startingNumber"
        android:layout_width="20dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:padding="2dp"
        android:text="SNo"
        app:layout_constraintStart_toEndOf="@+id/rankNumber"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/profilePicture"
        android:layout_width="25dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_user_circle_regular_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/startingNumber"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/playerName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ratingPoints"
        app:layout_constraintStart_toEndOf="@+id/profilePicture"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ratingPoints"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:gravity="right|center_vertical"
        android:padding="2dp"
        android:text="Rating"
        app:layout_constraintEnd_toStartOf="@+id/tournamentPoints"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tournamentPoints"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:gravity="right|center_vertical"
        android:padding="2dp"
        android:text="Points"
        app:layout_constraintEnd_toStartOf="@+id/buchholzPoints"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/buchholzPoints"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:gravity="right|center_vertical"
        android:padding="2dp"
        android:text="Buchholz points"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>